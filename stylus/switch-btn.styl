.switch-btn
  position: relative;
  width: 65px;
  -webkit-user-select: none;

  .switch-checkbox
    display: none;

    &:checked + .switch-label
      background-color: #00bc8d;

    &:checked + .switch-label:before
      right: 0;

    &:checked + .switch-label,  &:checked + .switch-label:before
      border-color: #00bc8d;

  .switch-label
    display: block; overflow: hidden; cursor: pointer;
    height: 34px; padding: 0; line-height: 36px;
    border: 2px solid #e5e5e5; border-radius: 34px;
    background-color: #fff;
    transition: background-color 0.3s ease-in;

    &:before
      content: "";
      display: block; width: 30px; margin: 0;
      background: #fff;
      position: absolute; top: 0; bottom: 0;
      right: 30px;
      border: 2px solid #e5e5e5; border-radius: 34px;
      transition: all 0.3s ease-in 0s;
